<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_launcher_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Bubble Icon or Image -->
    <ImageView
        android:id="@+id/bubbleImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/your_bubble_icon" />

    <!-- Main 화면으로 돌아가기 버튼 -->
    <Button
        android:id="@+id/btnGoToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main으로 돌아가기" />

    <!-- 도움말 이미지 생성 버튼 (기능은 나중에 추가) -->
    <Button
        android:id="@+id/btnHelpImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도움말 이미지 생성" />

</LinearLayout>